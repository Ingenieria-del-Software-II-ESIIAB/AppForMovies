{
  "openapi": "3.0.1",
  "info": {
    "title": "AppForMovies.API",
    "description": "This API provides services for renting and purchasing movies",
    "contact": {
      "name": "Software Engineering II Team",
      "email": "isii@on.uclm.es"
    },
    "license": {
      "name": "MIT License",
      "url": "https://opensource.org/license/mit/"
    },
    "version": "v1"
  },
  "paths": {
    "/api/Genres/GetGenres": {
      "get": {
        "tags": [
          "Genres"
        ],
        "operationId": "GetGenres",
        "parameters": [
          {
            "name": "genreName",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/Movies/GetMoviesForRental": {
      "get": {
        "tags": [
          "Movies"
        ],
        "operationId": "GetMoviesForRental",
        "parameters": [
          {
            "name": "movieTitle",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "movieGenre",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "fromDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "toDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MovieForRentalDTO"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MovieForRentalDTO"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MovieForRentalDTO"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/Rentals/GetRental": {
      "get": {
        "tags": [
          "Rentals"
        ],
        "operationId": "GetRental",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/RentalDetailDTO"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RentalDetailDTO"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/RentalDetailDTO"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Rentals/CreateRental": {
      "post": {
        "tags": [
          "Rentals"
        ],
        "operationId": "CreateRental",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RentalForCreateDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RentalForCreateDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RentalForCreateDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/RentalDetailDTO"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RentalDetailDTO"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/RentalDetailDTO"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string"
                }
              },
              "text/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MovieForRentalDTO": {
        "required": [
          "priceForRenting"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "genre": {
            "maxLength": 50,
            "minLength": 4,
            "type": "string",
            "nullable": true
          },
          "releaseDate": {
            "type": "string",
            "format": "date"
          },
          "priceForRenting": {
            "minimum": 1,
            "type": "number",
            "format": "currency"
          },
          "lastRental": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PaymentMethodTypes": {
        "enum": [
          "CreditCard",
          "PayPal",
          "Cash"
        ],
        "type": "string"
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "RentalDetailDTO": {
        "required": [
          "customerNameSurname",
          "customerUserName",
          "deliveryAddress",
          "paymentMethod"
        ],
        "type": "object",
        "properties": {
          "rentalDateFrom": {
            "type": "string",
            "format": "date-time"
          },
          "rentalDateTo": {
            "type": "string",
            "format": "date-time"
          },
          "deliveryAddress": {
            "maxLength": 50,
            "minLength": 10,
            "type": "string",
            "format": "multiline"
          },
          "customerUserName": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "customerNameSurname": {
            "maxLength": 50,
            "minLength": 10,
            "type": "string"
          },
          "rentalItems": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RentalItemDTO"
            },
            "nullable": true
          },
          "paymentMethod": {
            "$ref": "#/components/schemas/PaymentMethodTypes"
          },
          "TotalPrice": {
            "type": "number",
            "format": "double",
            "readOnly": true
          },
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "rentalDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "RentalForCreateDTO": {
        "required": [
          "customerNameSurname",
          "customerUserName",
          "deliveryAddress",
          "paymentMethod"
        ],
        "type": "object",
        "properties": {
          "rentalDateFrom": {
            "type": "string",
            "format": "date-time"
          },
          "rentalDateTo": {
            "type": "string",
            "format": "date-time"
          },
          "deliveryAddress": {
            "maxLength": 50,
            "minLength": 10,
            "type": "string",
            "format": "multiline"
          },
          "customerUserName": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "customerNameSurname": {
            "maxLength": 50,
            "minLength": 10,
            "type": "string"
          },
          "rentalItems": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RentalItemDTO"
            },
            "nullable": true
          },
          "paymentMethod": {
            "$ref": "#/components/schemas/PaymentMethodTypes"
          },
          "TotalPrice": {
            "type": "number",
            "format": "double",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "RentalItemDTO": {
        "type": "object",
        "properties": {
          "movieID": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "priceForRenting": {
            "type": "number",
            "format": "double"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "genre": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ValidationProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "nullable": true
          }
        },
        "additionalProperties": { }
      }
    }
  }
}